<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RadioGroup
        android:id="@+id/radioG"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <RadioButton
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:id="@+id/all"
            android:text="全部订单"
            android:button="@null"
            android:drawableTop="@drawable/common_icon_all_list_n_hdpi"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>

        <RadioButton
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:id="@+id/dpay"
            android:text="代付款"
            android:button="@null"
            android:drawableTop="@drawable/common_icon_pay_n_hdpi"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:id="@+id/dsend"
            android:text="代发货"
            android:button="@null"
            android:drawableTop="@drawable/common_icon_receive_n"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:id="@+id/dwrite"
            android:text="待评价"
            android:button="@null"
            android:drawableTop="@drawable/commom_icon_comment_n_hdpi"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:id="@+id/over"
            android:text="全部订单"
            android:button="@null"
            android:drawableTop="@drawable/common_icon_finish_n_hdpi"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        
    </RadioGroup>



    <androidx.cardview.widget.CardView
        android:background="#F000C8"
        android:layout_marginTop="40dp"
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="300dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </androidx.cardview.widget.CardView>


</LinearLayout>
